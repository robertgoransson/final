@model finalEvent.Models.User
@using finalEvent.Controllers;
@using finalEvent.Models;

@{
    ViewBag.Title = "MyPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2>Välkommen till din profilsida @Model.Firstname</h2>
<p> Här kan du ändra dina uppgifter och administrera dina kontakter och event.</p>
<br />
@{
    finalEvent.Models.User db = new finalEvent.Models.User();
}
<img src="~/images/@Model.Picture" width="100" height="100" />
@using (Html.BeginForm("EditPicture", "MyPage", FormMethod.Post,
                                             new { enctype = "multipart/form-data" }))
{
<div>
    Ändra profilbild<br />
    <input type="file" name="file" id="file" style="width: 100%;" /> <br />
</div>
<div class="col-md-offset-2 col-md-10">
    <input type="submit" value="Ändra bild" class="btn btn-default" />
</div>
}

@Html.ActionLink("Ändra dina uppgifter", "EditUser", "MyPage")



