@model finalEvent.Models.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid bg-1 text-center">
    <div class="row text-center">
        
            <div class="col-md-12">

                <h2>Lägg till kontakter</h2>

                @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post,
                                                     new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">

                            <div class="col-md-offset-2 col-md-8">
                                @Html.EditorFor(u => u.ReceiverEmail, new { htmlAttributes = new { placeholder = "E-post", @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Skapa kontakt" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
