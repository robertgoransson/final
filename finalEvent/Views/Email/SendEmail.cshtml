@model finalEvent.Models.User

@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
     <div class="col-md-12">
         <div class="container-fluid bg-1 text-center">
             <h2>Bjud in vänner till eventplaneraren</h2>
         </div>
    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()
        <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Mottagares E-post", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Skicka" />
                    </div>
                </div>
    }


    </div>
</div>
  
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
