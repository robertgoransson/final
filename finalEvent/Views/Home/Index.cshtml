@Html.ValidationSummary(true)
@model finalEvent.Models.User
<link href="@Url.Content("~/Content/grabbhelg.css")" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid1 bg-1 text-center">
    <h3>Välkommen till din evenemangshanterare!</h3>
    <br />
</div>
    <div class="container-fluid bg-1 text-center">
        <div class="row">
            <div class="col-md-12">

                @using (Html.BeginForm())
                {                 
                    <div>
                        <fieldset>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(u => u.Email, new { placeholder = "Email", @class = "form-control" }) 
                                </div>
                                </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.ValidationMessageFor(u => u.Email)
                                </div>
                                </div>
                                <br />
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.PasswordFor(u => u.Password, new { placeholder = "Lösenord", @class = "form-control" })
                                </div>
                                </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.ValidationMessageFor(u => u.Password)
                                </div>
                                </div>

                                <input type="submit" value="Logga in" />
</fieldset>
                    </div>
                }
                </div>
            </div>
        </div>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
