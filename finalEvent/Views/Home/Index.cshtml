@Html.ValidationSummary(true)
@model finalEvent.Models.User
<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid bg-1 text-center">
    <div class="row text-center">
        <div class="col-md-12">


            <h1>Välkommen till Eventplaneraren</h1>

            <h6>- Ett enkelt och smidigt verktyg för dig som vill skapa och delta i olika event</h6>
            <br />

            <section id="loginForm" class="col-md-12">


                @{ if (!Request.IsAuthenticated)
            {
                using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {

                            @Html.AntiForgeryToken()
                            <div class="container-fluid bg-1 text-center">

                                <h3>Logga in med hjälp av ditt evenemangskonto!</h3>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { placeholder = "E-post", @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Lösenord", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Logga in" class="btn btn-primary btn-lg btn-block" />

                                </div>
                            </div>
                        }
                    }
                    using (Html.BeginForm("RegisterUser", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Ny användare? registrera dig här" class="btn btn-primary btn-lg btn-block" />

                            </div>
                        </div>

                    }

                }
            </section>
        
     
        </div>

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
