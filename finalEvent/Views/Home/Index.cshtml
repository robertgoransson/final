@Html.ValidationSummary(true)
@model finalEvent.Models.User
<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid bg-1 text-center">
    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h3>Logga in med hjälp av ditt evenemangskonto!</h3>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Lösenord", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Logga in" class="btn btn-primary btn-lg btn-block" />
                            
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Registrera ny användare", "RegisterUser", "User")
                    </p>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
